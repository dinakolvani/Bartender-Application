@model IEnumerable<BartenderApp.Models.Cocktail>
@{
    ViewData["Title"] = "Cocktail Menu";
}

<section class="container py-4">
    <h1 class="mb-4">Cocktail Menu</h1>

    @if (TempData["msg"] is string msg)
    {
        <div class="alert alert-autumn mb-4" role="alert">@msg</div>
    }

    <div class="row g-4">
        @foreach (var c in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card menu-card h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-1">
                            <h5 class="card-title mb-0">@c.Name</h5>
                            <span class="price-badge">${@c.Price:0.00}</span>
                        </div>

                        @if (!string.IsNullOrWhiteSpace(c.Description))
                        {
                            <p class="card-text text-muted mb-3">@c.Description</p>
                        }

                        <div class="d-flex justify-content-end">
                            <a asp-controller="Orders"
                               asp-action="Create"
                               asp-route-cocktailId="@c.Id"
                               class="btn btn-autumn-primary">
                                Order
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
