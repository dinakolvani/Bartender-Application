@{
    ViewData["Title"] = "Bartender Application";
}

<div class="container text-center mt-5">
    <h1 class="display-4 fw-bold mb-3">🍸 Bartender Application</h1>
    <p class="lead mb-4">Choose an option:</p>

    <div class="d-flex justify-content-center gap-3">
        <!-- Order a Cocktail -->
        <a asp-controller="Cocktails" asp-action="Index" class="btn btn-autumn-primary">
            Order a Cocktail
        </a>

        <!-- Bartender Order Queue -->
        <a asp-controller="Orders" asp-action="Queue" class="btn btn-autumn-outline">
            Bartender Order Queue
        </a>
    </div>
</div>