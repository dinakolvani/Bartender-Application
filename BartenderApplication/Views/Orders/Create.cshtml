@model BartenderApp.Models.Order
@{
    var cocktail = ViewBag.Cocktail as BartenderApp.Models.Cocktail;
    ViewData["Title"] = "Place Order";
}
<h2>Place Order</h2>
<div class="card">
    <div class="card-body">
        <h4>@cocktail?.Name <small class="text-muted">@cocktail?.Price.ToString("C")</small></h4>
        <p class="text-muted">@cocktail?.Description</p>


        <form asp-action="Create" method="post">
            <input type="hidden" asp-for="CocktailId" />
            <div class="mb-3">
                <label asp-for="CustomerName" class="form-label"></label>
                <input asp-for="CustomerName" class="form-control" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success">Place Order</button>
            <a class="btn btn-secondary" href="/@Url.Action("Menu", "Cocktails")">Back to Menu</a>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}