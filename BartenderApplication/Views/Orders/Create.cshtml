@model BartenderApp.Models.Order
@{
    ViewData["Title"] = "Place Order";
    var cocktail = ViewBag.Cocktail as BartenderApp.Models.Cocktail;
}

<div class="container py-4">
    <h1 class="mb-3">Place Order</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title mb-1">
                @cocktail?.Name <span class="text-muted fs-6">$@cocktail?.Price</span>
            </h4>
            @if (!string.IsNullOrWhiteSpace(cocktail?.Description))
            {
                <p class="text-muted">@cocktail.Description</p>
            }

            <form asp-controller="Orders" asp-action="Create" method="post" class="mt-3">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="CocktailId" />

                <div class="mb-3">
                    <label asp-for="CustomerName" class="form-label"></label>
                    <input asp-for="CustomerName" class="form-control" />
                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                </div>

                <!-- Place order -->
                <button type="submit" class="btn btn-success">Place Order</button>

                <!-- The ONLY Back link (works + styled like big button) -->
                <a asp-controller="Cocktails" asp-action="Menu" class="btn btn-secondary ms-2">
                    Back to Menu
                </a>
            </form>
        </div>
    </div>
</div>